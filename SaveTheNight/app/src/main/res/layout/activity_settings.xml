<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lydia.savethenight.questionActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Set your emergency sms"
    android:textSize="28sp"
    android:textStyle="bold"
    android:id="@+id/titleTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose contact"
        android:textSize="22sp"
        android:layout_below="@+id/titleTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/contactTV"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smsTV"
        android:text="Type your sms"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/contactTV"
        android:layout_alignEnd="@+id/contactTV" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smsTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/smsET"
        android:layout_alignRight="@+id/titleTV"
        android:layout_alignEnd="@+id/titleTV" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveSMSBT"
        android:layout_alignTop="@+id/smsET"
        android:layout_alignRight="@+id/smsET"
        android:layout_alignEnd="@+id/smsET"
        android:onClick="saveSMS"/>

</RelativeLayout>